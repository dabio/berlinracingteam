<section id="people">

  <header class="row">
    <h2 class="threequarter">Fahrer</h2>
    <nav class="quarter second">
      <form action="<%= Person.createlink %>" method="post">
        <button class="btn btn-square icon-plus">Neuer Fahrer</button>
      </form>
    </nav>
  </header>

  <table class="width-100 striped">

    <thead>
      <tr>
        <th>Name</ht>
        <th colspan="2">E-Mail</th>
      </tr>
    </thead>

    <tbody>

      <% if people.each do |person| %>

        <tr>
          <td<% if !person.is_active %> class="gray-light"<% end %>><%= person.name %></td>
          <td>
            <a class="gray-dark" href="mailto:<%= person.email %>"><%= person.email %></a>
          </td>
          <td>
            <a class="icons" href="<%= person.editlink %>" title="Bearbeiten">&#x21;</a>
          </td>
        </tr>

      <% end.empty? %>

        <tr>
          <td colspan="3">Keine Personen vorhanden</td>
        </tr>

      <% end %>

    </tbody>

  </table>

</section>
