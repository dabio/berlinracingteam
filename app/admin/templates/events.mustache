<section id=events>

  <header class=row>
    <h2 class=threequarter>Rennen</h2>
    <nav class="quarter second">
      <form action="/admin/events" method=post>
        <button class="btn btn-square icon-plus">Neues Rennen</button>
      </form>
    </nav>
  </header>

  <table class="width-100 striped">
    <thead>
      <tr>
        <th>Datum</th>
        <th>Bezeichnung</th>
        <th></th>
      </tr>
    </thead>
    {{#pagination?}}
    <tfoot id=pagination>
      <tr>
        <td colspan=2>
          <span class=pages>Seite {{page}} von {{page_count}}</span>
          <span class=page-items>
            {{#pagination}}
            {{#href}}<a href="{{href}}">{{title}}</a>{{/href}}
            {{^href}}<span>{{title}}</span>{{/href}}
            {{/pagination}}
          </span>
        </td>
        <td>
          <span class=pages-navigation>
            {{#pagination_left_right}}
            {{#href}}<a href="{{href}}">{{title}}</a>{{/href}}
            {{^href}}<span>{{title}}</span>{{/href}}
            {{/pagination_left_right}}
          </span>
        </td>
      </tr>
    </tfoot>
    {{/pagination?}}
    <tbody>
      {{#events}}
      <tr>
        <td>{{date_formatted}}</td>
        <td>{{title}}</td>
        <td>
          <a class="icons" href="{{editlink}}">&#x21;</a>
        </td>
      </tr>
      {{/events}}
    </tbody>
  </table>

</section>
