<section id=people>

  <header class=row>
    <h2 class=threequarter>Fahrer</h2>
    <nav class="quarter second">
      <form action="/admin/people" method=post>
        <button class="btn btn-square icon-plus">Neuer Fahrer</button>
      </form>
    </nav>
  </header>

  <table class="width-100 striped">
    <thead>
      <tr>
        <th>Name</th>
        <th colspan="2">E-Mail</th>
      </tr>
    </thead>
    {{> _pagination }}
    <tbody>
      {{#people}}
      <tr>
        <td>{{name}}</td>
        <td><a class="gray-dark" href="mailto:{{email}}">{{email}}</a></td>
        <td><a class="icons" href="{{editlink}}">&#x21;</a></td>
      </tr>
      {{/people}}
    </tbody>
  </table>

</section>
