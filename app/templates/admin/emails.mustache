<section id="emails">

  <header class=row>
    <h2>E-Mails</h2>
  </header>

  <table class="width-100 striped">
    <thead>
      <tr>
        <th class="date">Datum</th>
        <th colspan="2">Kontakt</th>
      </tr>
    </thead>
    {{> _pagination }}
    <tbody>
      {{#emails}}
      <tr>
        <td class="date">{{date_formatted}}</td>
        <td><a class="gray-dark" href="mailto:{{email}}" title="{{name}}">{{name}} &lt;{{email}}&gt;</a></td>
        <td><a class="icons" href="{{editlink}}">&#x22;</a></td>
      </tr>
      {{/emails}}
    </tbody>
  </table>

</section>
