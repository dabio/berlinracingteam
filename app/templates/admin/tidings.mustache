<section id=news>

  <header class=row>
    <h2 class=threequarter>News & Rennberichte</h2>
    <nav class="quarter second">
      <a href="" class=icon-plus>Anlegen</a>
    </nav>
  </header>

  <table class="width-100 striped">
    <thead>
      <tr>
        <th>Datum</th>
        <th>Titel</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      {{#news}}
      <tr>
        <td>{{date_formatted}}</td>
        <td>{{title}}</td>
        <td>
          <a class="icons" href="{{editlink}}">&#x21;</a>
        </td>
      </tr>
      {{/news}}
    </tbody>
  </table>

</section>

<section id=new class=edit>
</section>

<script type=text/template id=edit_template>
  <p><%= id %></p>
  <p><%= date %></p>
  <p><%= title %></p>
  <p><%= slug %></p>
</script>
